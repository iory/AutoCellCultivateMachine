<launch>
    <arg name="rviz" default="false" />
    <node name="estimation" pkg="mycobot_320_moveit" type="estimation.py" output="screen" />
    <node name="virtual_camera" pkg="mycobot_320_moveit" type="virtual_camera.py" output="screen" />
    <node name="display_marker" pkg="mycobot_320_moveit" type="display_marker.py" output="screen" />
    <group if = "$(eval rviz)">
        <node name="rviz" pkg="rviz" type="rviz" args="-d $(find mycobot_320_moveit)/config/moveit_rviz.rviz" />
    </group>
</launch>